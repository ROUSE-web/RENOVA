// Get the slug from the URL
const { slug } = Astro.params;

// Find the service by slug
const service = services.find((s) => s.slug === slug);

// If service not found, return 404
if (!service) {
    return Astro.redirect("/404");
}

// Set page metadata
const pageTitle = `${service.title} | RENOVA`;
const pageDescription = service.subtitle;

// This function is required for static site generation
export function getStaticPaths() {
    return [
        { params: { slug: "creacion-de-marca" } },
        { params: { slug: "diseno-de-papeleria-corporativa" } },
        { params: { slug: "diseno-de-empaques" } },
        { params: { slug: "social-media" } },
        { params: { slug: "desarrollo-web" } },
        { params: { slug: "gigantografia" } },
    ];
}
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <div class="stack gap-20">
        <main class="wrapper stack gap-4">
            <Hero
                title={service.title}
                tagline={service.subtitle}
                align="start"
            />

            <!-- Carousel 3D de proyectos -->
            <section class="service-gallery">
                <Carousel3D
                    images={service.images}
                    serviceSlug={service.slug}
                />
            </section>

            <!-- Descripcion del servicio -->
            <section class="service-description">
                <div class="stack gap-4">
                    <h2 class="h2">Descripción del servicio</h2>
                    <p>{service.description}</p>
                </div>
            </section>

            <!-- Nuestras ofertas -->
            <WorkTypes workTypes={service.workTypes} />
        </main>
    </div>
</BaseLayout>

<style>
    .service-description {
        text-align: center;
        max-width: 80ch;
        margin-inline: auto;
    }

    .service-description h2 {
        font-size: var(--text-xl);
    }

    @media (min-width: 50em) {
        .service-description h2 {
            font-size: var(--text-3xl);
        }
    }
</style>
