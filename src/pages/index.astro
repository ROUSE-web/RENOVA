---
import { getCollection } from "astro:content";

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from "../layouts/BaseLayout.astro";

// Component Imports
import CallToAction from "../components/CallToAction.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
import CardServices from "../components/CardServices.astro";

// Page section components
import Skills from "../components/Skills.astro";
import Testimonials from "../components/Testimonials.astro";
import Skills2 from "../components/Skills2.astro";
import ParticlesBackground from "../components/ParticlesBackground.astro";
import Orbit from "../components/Orbit.astro";

// Content Fetching: List four most recent work projects
const projects = (await getCollection("servicios"))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4);

// Services data
const services = [
  {
    title: "Creación de Marca",
    image: "/assets/services/branding/branding-banner.webp",
  },
  {
    title: "Diseño de Papelería Corporativa",
    image: "/assets/services/stationery/stationery-banner.webp",
  },
  {
    title: "Diseño de Empaques",
    image: "/assets/services/packaging/packaging-banner.webp",
  },
  {
    title: "Social Media",
    image: "/assets/services/social-media/social-media-banner.webp",
  },
  {
    title: "Desarrollo Web",
    image: "/assets/services/web-dev/web-dev-banner.webp",
  },
  {
    title: "Gigantografía",
    image: "/assets/services/gigantografia/gigantografia-banner.webp",
  },
];

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<BaseLayout>
  <ParticlesBackground />
  <div class="stack gap-20 lg:gap-24">
    <div class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <Hero
          title="RENOVA"
          subtitle="ESTUDIO CREATIVO"
          tagline="Renovamos la forma en la que el mundo ve tu marca."
          align="start"
        >
          <CallToAction href="/servicios/" size="sm">
            Nuestros Servicios
          </CallToAction>
        </Hero>

        <img
          alt="Rous CEO de Renova"
          width="620"
          height="620"
          src="/assets/perfil.webp"
        />
      </header>

      <Skills2 />
      <Skills />
    </div>

    <main class="wrapper stack gap-20 lg:gap-24">
      <section class="section with-background with-cta">
        <header class="section-header stack gap-2 lg:gap-4">
          <h3>Nuestros Servicios</h3>
          <p>
            Aquí encontrarás una lista de nuestros servicios más destacados.
          </p>
        </header>

        <div class="gallery services-grid">
          {
            services.map((service) => (
              <CardServices title={service.title} image={service.image} />
            ))
          }
        </div>

        <aside>
          <CallToAction href="https://wa.me/59175923339">
            <span class="cta-text">¿Cómo puedo ayudarte?</span>
            <Icon icon="whatsapp-logo" size="1.5em" />
          </CallToAction>
        </aside>
      </section>

      <section class="section with-background bg-variant">
        <header class="section-header stack gap-2 lg:gap-4">
          <h3>Experiencias de nuestros clientes</h3>
          <p>
            Algunos de nuestros clientes han compartido sus experiencias con
            nosotros.
          </p>
        </header>

        <div class="gallery">
          <Testimonials />
        </div>
      </section>
    </main>

    <div class="wrapper stack gap-8 lg:gap-8">
      <Orbit />
    </div>
  </div>
</BaseLayout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .hero img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    object-position: top;
    padding: 50px;
  }
  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    border-top: 1px solid var(--gray-800);
    border-bottom: 1px solid var(--gray-800);
    padding: 5rem 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }
  @media (min-width: 50em) {
    .hero {
      display: grid;
      grid-template-columns: 6fr 4fr;
      padding-inline: 2.5rem;
      gap: 3.75rem;
    }

    .hero img {
      aspect-ratio: 1 / 1;
      object-fit: cover;
    }
  }

  /* ====================================================== */

  .section {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 2rem;
    overflow-x: hidden;
  }

  .with-background {
    position: relative;
  }

  .with-background::before {
    --hero-bg: var(--bg-image-subtle-2);

    content: "";
    position: absolute;
    pointer-events: none;
    left: 50%;
    width: 100vw;
    aspect-ratio: calc(2.25 / var(--bg-scale));
    top: 0;
    transform: translateY(-75%) translateX(-50%);
    background:
      url("/assets/backgrounds/noise.png") top center/220px repeat,
      var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
      var(--gray-999);
    background-blend-mode: overlay, normal, normal, normal;
    mix-blend-mode: var(--bg-blend-mode);
    z-index: -1;
  }

  .with-background.bg-variant::before {
    --hero-bg: var(--bg-image-subtle-1);
  }

  .section-header {
    justify-self: center;
    text-align: center;
    width: 100%;
    max-width: min(50ch, 100%);
    font-size: var(--text-md);
    color: var(--gray-300);
    position: relative;
    z-index: 1;
  }

  .section-header h3 {
    font-size: var(--text-2xl);
  }

  @media (min-width: 50em) {
    .section {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas: "header header header header" "gallery gallery gallery gallery";
      gap: 5rem;
    }

    .section.with-cta {
      grid-template-areas: "header header header cta" "gallery gallery gallery gallery";
    }

    .section-header {
      grid-area: header;
      font-size: var(--text-lg);
    }

    .section-header h3 {
      font-size: var(--text-4xl);
    }

    .with-cta .section-header {
      justify-self: flex-start;
      text-align: left;
    }

    .gallery {
      grid-area: gallery;
    }

    .cta {
      grid-area: cta;
    }
  }

  /* ====================================================== */

  .mention-card {
    display: flex;
    height: 7rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    border: 1px solid var(--gray-800);
    border-radius: 1.5rem;
    color: var(--gray-300);
    background: var(--gradient-subtle);
    box-shadow: var(--shadow-sm);
  }

  @media (min-width: 50em) {
    .mention-card {
      border-radius: 1.5rem;
      height: 9.5rem;
    }
  }
  /* Make the button floating */
  aside :global(a) {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 1000;
  }

  .cta-text {
    display: none;
  }

  @media (max-width: 50em) {
    aside :global(a) {
      padding: 0;
      width: 3.5rem;
      height: 3.5rem;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      box-shadow: var(--shadow-md);
    }
  }

  @media (min-width: 50em) {
    .cta-text {
      display: inline;
    }
  }

  /* Services Grid Styles */
  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    width: 100%;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }
</style>
