---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import CardServices from "../components/CardServices.astro";

const services = [
  {
    title: "Creación de Marca",
    image: "/assets/services/branding/branding-banner.webp",
  },
  {
    title: "Diseño de Papelería Corporativa",
    image: "/assets/services/stationery/stationery-banner.webp",
  },
  {
    title: "Diseño de Empaques",
    image: "/assets/services/packaging/packaging-banner.webp",
  },
  {
    title: "Social Media",
    image: "/assets/services/social-media/social-media-banner.webp",
  },
  {
    title: "Desarrollo Web",
    image: "/assets/services/web-dev/web-dev-banner.webp",
  },
  {
    title: "Gigantografía",
    image: "/assets/services/gigantografia/gigantografia-banner.webp",
  },
];
---

<BaseLayout
  title="Servicios | RENOVA"
  description="Algunos de los servicios que ofrecemos"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="Nuestros Servicios"
        tagline="Algunos de los servicios que ofrecemos"
        align="start"
      />
      <div class="services-grid">
        {
          services.map((service) => (
            <CardServices title={service.title} image={service.image} />
          ))
        }
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  /* Services Grid Styles */
  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    width: 100%;
    margin-bottom: 4rem;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }
</style>
